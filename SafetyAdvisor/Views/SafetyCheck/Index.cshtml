@{
    ViewBag.Title = "Safety-Check";
}

<div class="container">
    <div class="row">
        <div class="col-lg-12">
            <h1 class="page-header">@ViewBag.Title</h1>
        </div>
    </div>
    <div class="row">
        <div class="col-lg-12">
            <p>Der Safety-Check führt den Nutzer durch verschiedene thematische Bereiche (Problemstellungen und Maßnahmen aus SafeMed) und unterstützt Unternehmen der MVK relevante Safety-Risks und Safety-Concepts zu identifizieren.</p>
            @Html.ActionLink("Safety-Check starten", "create", "safetycheck", null, new { @class = "btn btn-primary btn-lg" })
        </div>
    </div>
</div>
