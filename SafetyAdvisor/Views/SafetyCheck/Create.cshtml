@model IEnumerable<SafetyAdvisor.Models.SelectSafetyConceptEditorViewModel>

@{
    ViewBag.Title = "Safety-Check: neuer Check!";
}

<div class="container">
    <div class="row">
        <div class="col-lg-12">
            <h1 class="page-header">@ViewBag.Title</h1>
        </div>
    </div>

    @using (Html.BeginForm("create", "safetycheck", FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
    {
        @Html.AntiForgeryToken()
        <div class="row">
            <div class="col-lg-12">
                <div class="panel-group" id="accordion">
                    @Html.EditorFor(m => m, new { ParentId = "accordion" })
                </div>
            </div>
        </div>
        <hr />
        <div class="row">
            <div class="col-lg-12">
                <button class="btn btn-default pull-left" type="submit" value="Previous" name="parents"><i class="glyphicon glyphicon-arrow-left"></i> Zurück</button>
                <button class="btn btn-primary pull-right" type="submit" value="Next" name="children">Weiter <i class="glyphicon glyphicon-arrow-right"></i></button>
            </div>
        </div>
    }
</div>
