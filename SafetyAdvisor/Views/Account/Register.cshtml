@{
    ViewBag.Title = "Register";
}

<div class="container">
    <div class="row">
        <div class="col-lg-12">
            <h1 class="page-header">@ViewBag.Title</h1>
            @if (!Request.IsAuthenticated)
            {
                @Html.Partial("_RegisterPartial");
            }
            else
            {
                <h4>You are already logged in as <strong>@User.Identity.Name</strong></h4>
                <p>Please log out first if you want to register with a new account.</p>
            }
        </div>
    </div>
    <div class="row">
        <div class="col-md-12">

        </div>
    </div>
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
