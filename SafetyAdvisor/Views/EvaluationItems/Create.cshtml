@model SafetyAdvisor.Models.EvaluationItem
@using SafetyAdvisor.Helpers;

@{
    ViewBag.Title = "New evaluaiton item";
}

<div class="container">

    @Html.RenderAlerts()

    <div class="row">
        <div class="col-lg-12">
            <h1 class="page-header">@ViewBag.Title</h1>
        </div>
    </div>

    <div class="row">
        <div class="col-md-12">
            @using (Html.BeginForm("create", "evaluationitems", FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
            {
                if (Model != null && Model.ParentId != null)
                {
                    <h3>Create child item for @Model.Parent.Caption (@Model.ParentId)</h3>
                    Html.HiddenFor(m => m.ParentId);
                    }
                @Html.Partial("_EditEvaluationItem")
            }
        </div>
    </div>
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
