@model SafetyAdvisor.Models.EvaluationItem

@Html.AntiForgeryToken()

<p>You can edit the evaluation item data below. Please note that <strong>both Caption and Content are required fields</strong>.</p>
<hr />

@Html.ValidationSummary()

@Html.HiddenFor(model => model.ParentId)

<div class="form-group">
    @Html.LabelFor(model => model.Caption, new { @class = "control-label col-md-2" })
    <div class="col-md-10">
        @Html.TextBoxFor(model => model.Caption, new { @class = "form-control" })
    </div>
</div>

<div class="form-group">
    @Html.LabelFor(model => model.Content, new { @class = "control-label col-md-2" })
    <div class="col-md-10">
        @Html.TextAreaFor(model => model.Content, 10, 1, new { @class = "form-control" })
    </div>
</div>

<div class="form-group">
    <label class="control-label col-md-2"></label>
    <div class="col-md-10">
        <div class="checkbox">
            <label>
                @Html.CheckBoxFor(model => model.IsReactive)
                @Html.DisplayNameFor(model => model.IsReactive)
            </label>
        </div>
    </div>
</div>

<div class="form-group">
    <div class="col-md-offset-2 col-md-10">
        <input type="submit" value="Save" class="btn btn-primary" /> or @Html.ActionLink("Cancel", "Index") and go back to the list.
    </div>
</div>