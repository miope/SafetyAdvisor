@model SafetyAdvisor.Models.SelectRoleEditorViewModel

@Html.HiddenFor(m => m.Id)
@Html.HiddenFor(m => m.Name)
@Html.HiddenFor(m => m.Description)

<div class="checkbox">
    <label>
        @Html.CheckBoxFor(m => m.Selected)
        @Html.DisplayFor(m => m.Name) [ @Html.DisplayFor(m => m.Description) ]
    </label>
</div>